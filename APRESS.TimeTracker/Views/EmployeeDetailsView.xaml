<Window x:Class="APRESS.TimeTracker.Views.EmployeeDetailsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:resources="clr-namespace:APRESS.TimeTracker.Resources"
        Title="EmployeeDetailsView" Height="300" Width="300">
    <DockPanel LastChildFill="True">
        <TextBlock DockPanel.Dock="Top" Style="{StaticResource TitleBlock}">
            Time Tracker Employee Details
        </TextBlock>
        <StackPanel DockPanel.Dock="Bottom" MaxHeight="30" Orientation="Horizontal" HorizontalAlignment="Right">
            <resources:ImageButton Padding="3" Text="Save" Image="{DynamicResource SaveSmall}" />
            <resources:ImageButton Padding="3" Text="Close" Image="{DynamicResource CloseSmall}" />
        </StackPanel>
        <TabControl DockPanel.Dock="Bottom" Margin="5">
            <TabItem Header="Employee" />
            <TabItem Header="Contacts" />
            <TabItem Header="Appointments" />
        </TabControl>
    </DockPanel>
</Window>
